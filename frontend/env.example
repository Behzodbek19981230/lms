# Frontend Environment Variables
# Copy this file to .env.local for local development
# Copy to .env.production for production builds

# API Configuration
VITE_API_BASE_URL=http://localhost:3003/api
# For production: VITE_API_BASE_URL=https://your-api-domain.com/api

# Telegram Configuration
VITE_TELEGRAM_BOT_USERNAME=your_bot_username
# Get this from BotFather when creating your bot

# App Configuration
VITE_APP_NAME=EduNimbus Connect
VITE_APP_VERSION=1.0.0

# Build Configuration
VITE_BUILD_MODE=production
# Options: development, production

# Feature Flags
VITE_ENABLE_TELEGRAM=true
VITE_ENABLE_PDF_GENERATION=true
VITE_ENABLE_EXCEL_IMPORT=true

# Debug Configuration (only for development)
VITE_DEBUG=false
VITE_LOG_LEVEL=info
